<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCardColor"
    tools:context=".view.more.MyQrCodeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_my_qr_code_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_back_info_person_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/ripple_effect_click_view"
                android:clickable="true"
                android:padding="8dp"
                android:src="@drawable/ic_arrow_back_24" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_toRightOf="@id/ic_back_info_person_activity"
                android:id="@+id/img_toolbar_info_person_act"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="4dp"
                android:src="@drawable/unnamed" />

            <TextView
                android:id="@+id/txt_toolbar_title_info_person_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/img_toolbar_info_person_act"
                android:text="@string/name_user_default"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_my_qr_code_activity">

        <ImageView
            android:id="@+id/img_my_qr_code_activity"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="fitXY" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>