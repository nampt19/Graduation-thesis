<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.profileUser.PickerActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_picker_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/whiteCardColor"
        android:elevation="5dp"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:cardBackgroundColor="@color/colorGreyThinSuper"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_search_32"
                app:tint="@android:color/darker_gray" />

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text_picker"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/colorGreyThinSuper"
                android:hint="Tìm kiếm địa chỉ"
                android:completionThreshold="1"
                android:padding="8dp"
                android:textSize="14sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>