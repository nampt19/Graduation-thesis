<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlueThin</item>
        <item name="colorAccent">@color/colorBlueThin</item>
    </style>

    <!--designs for login and register-->
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParent" parent="parent">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColor</item>
    </style>

    <style name="child" parent="parent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="loginCard" parent="parent"></style>

    <style name="headerText" parent="parent">
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headerTextPrimary" parent="headerText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ripple_effect_click_view</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/ripple_effect_button_blue</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">140dp</item>
    </style>

    <!--    style for alert dialog-->
    <style name="myLoadingDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#408bff</item>
    </style>
    <!--    style for bottomSheetDialog-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/comment_bk</item>
    </style>

    <!--    progressbar white-->
    <style name="progressBarWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <!--    style for layout item more fragment-->
    <style name="StyleLayoutItemMore" >
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/ripple_effect_click_view</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>