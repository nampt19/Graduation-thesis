<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGreyThinSuper">
    <include
        android:id="@+id/layout_progress_loading_search_people"
        layout="@layout/layout_progress_loading" />

    <include
        android:id="@+id/layout_no_data_search_people"
        layout="@layout/layout_no_data" />

    <include
        android:id="@+id/layout_no_network_search_people"
        layout="@layout/layout_no_network" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_search_people"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>