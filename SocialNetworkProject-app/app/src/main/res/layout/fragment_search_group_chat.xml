<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteCardColor"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_progress_loading_group_chat_search"
        layout="@layout/layout_progress_loading" />

    <include
        android:id="@+id/layout_no_data_group_chat_search"
        layout="@layout/layout_no_data" />

    <include
        android:id="@+id/layout_no_network_group_chat_search"
        layout="@layout/layout_no_network" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_search_group_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>