<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_friend_request"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/unnamed"
        app:civ_border_color="@android:color/black"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name_friend_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Bích Ngọc"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <Button
                    android:id="@+id/btn_accept_request"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ripple_effect_button_blue"
                    android:text="Chấp nhận"
                    android:textColor="@color/whiteCardColor"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp">

                <Button
                    android:id="@+id/btn_delete_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect_click_button_common"
                    android:text="Xóa"
                    android:textSize="12sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>